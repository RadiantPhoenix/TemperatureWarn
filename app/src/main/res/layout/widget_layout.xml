<!-- res/layout/widget_layout.xml -->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_height="280dp"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <ImageView
        android:id="@+id/main_theme"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/main_theme" />

    <ImageView
        android:id="@+id/image_gears"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/brass_frame" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/text_battery_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/steampunk_font"
            android:layout_marginTop="70dp"
            android:text="Battery Temp: --°C"
            android:textColor="@color/bronze"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_battery_threshold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/steampunk_font"
            android:text="Temp threshold: --°C"
            android:textColor="@color/bronze"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_battery_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temp normal"
            android:fontFamily="@font/steampunk_font"
            android:textSize="18sp"
            android:textColor="@color/bronze" />

        <TextView
            android:id="@+id/text_last_updated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:fontFamily="@font/steampunk_font"
            android:textSize="10sp"
            android:textColor="@color/bronze" />

        <Button
            android:id="@+id/button_set_threshold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@android:color/transparent"
            android:fontFamily="@font/steampunk_font"
            android:text="SETTINGS"
            android:textColor="@color/bronze"
            android:textSize="18sp" />
    </LinearLayout>
</FrameLayout >